[[ "${__ENV_RC__:-""}" == yes ]] && return 0
__ENV_RC__=yes

function message() {
  echo "${@}" >&2
}
function abort() {
  message "${@}"
  exit 1
}

basedir="$(dirname "${BASH_SOURCE[0]}")"
rcdir="${basedir}/.rc"
[[ -d "${rcdir}" ]] || abort "Please run 'bootstrap.sh', first!"

source "${rcdir}/goenv.rc"
source "${rcdir}/caveats.rc"
source "${rcdir}/.bash_profile"
